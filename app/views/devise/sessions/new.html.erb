<div class="col-md-4 col-md-offset-4">
  <h2 class="join-twitter">Have an account?</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-field" %>

      <%= f.password_field :password, placeholder: "Password",autocomplete: "off", class: "form-field" %>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "register-login-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>